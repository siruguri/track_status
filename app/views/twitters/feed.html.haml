- if @feed_list.size == 0 || Tweet.top_of_feed(current_user.twitter_profile) < (Time.now - 24.hours)
  .paragraph
    .btn.feed-refresh.action{'data-action-id' => 1}
      Refresh Feed
  
- if @feed_list.size > 0
  %ol.tweet-list
    - @feed_list.each do |tweet, handle|
      %ul.item
        .line-one
          .handle
            = link_to tweet.user.handle, 'https://twitter.com/' + tweet.user.handle
          .time
            = better_time(tweet)
          .retweet-button.action{'data-action-id' => 2, 'data-action-data' => "#{tweet.tweet_id}"}
            Retweet
        .mesg
          = better_urls(tweet)
        - if tweet.has_media?
          .tweet-media
            %img{src: tweet.tweet_details['entities']['media'][0]['media_url_https']}

= will_paginate @feed_list

