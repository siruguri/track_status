- @profiles_list_sorts[sort_method].all.each do |rec|
  .row.handle-details
    .col-xs-2
      = link_to rec.handle, twitter_path(handle: rec.handle)
    .col-xs-2
      = "#{rec.tweets_count}"
    .col-xs-5
      = number_of_tweets_message(rec)
    .col-xs-3.time-font
      = "#{rec.last_tweet_time.try(:strftime, '%d/%b/%Y %H:%M:%S')}"  
    
